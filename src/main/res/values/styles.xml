<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Reitan-->
    <style name="Header_Montserrat_Bold_13">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#232f3b</item>
    </style>

    <style name="Header_Montserrat_Bold_16">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#232f3b</item>
    </style>

    <style name="Header_Montserrat_Normal_16">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#232f3b</item>
    </style>

    <style name="Message_Montserrat_12">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#62778c</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Edittext_Montserrat_14">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">#aa62778c</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Edittext_Quantity_Montserrat_14">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">#aa62778c</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Fullscreen_DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ErrorText_12" parent="TextAppearance.Design.Error">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="HintLabelText_12">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#52677c</item>
    </style>

    <style name="CounterOverFlow_12" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="CounterText_12" parent="TextAppearance.Design.Counter">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Edittext_Wrapper_Common" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintLabelText_12</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorText_12</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="Edittext_Wrapper_With_Counter" parent="Widget.Design.TextInputLayout">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="counterOverflowTextAppearance">@style/CounterOverFlow_12</item>
        <item name="counterTextAppearance">@style/CounterText_12</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorText_12</item>
        <item name="hintEnabled">false</item>
    </style>
    <!--End Reitan-->

    <style name="Style_Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

